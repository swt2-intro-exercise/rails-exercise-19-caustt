<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Homepage</th>
	</tr>

<% @authors.each do |author| %>
	<tr>
		<td><%= link_to author.first_name, author %></td>
		<td><%= author.last_name %></td>
		<td><%= author.homepage %></td>
		<td><%= link_to "Edit", edit_author_path(author) %></td>
		<td><%= link_to 'Delete', author_path(author), method: :delete %></td>

	</tr>
<% end %>
</table>

<%= link_to "Add Author", new_author_path %>

